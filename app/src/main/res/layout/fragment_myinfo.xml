<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="#964b00"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".fragment.MyinfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 현재 페이지 이름             weight 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="#deb887"
                android:text="@string/MyInfo"
                android:textAlignment="center"
                android:textColor="#964b00"
                android:textSize="30sp" />

        </LinearLayout>

        <!--  내 정보                    weight 3 -->
        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#964b00"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/myCharacter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="2"
                    android:background="#deb887"
                    android:contentDescription="@string/MyInfo" />

                <RatingBar
                    android:id="@+id/hp_Bar"
                    style="@style/slothBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="#deb887"
                    android:isIndicator="true"
                    android:numStars="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#964b00"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    android:id="@+id/myInfoName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="40dp"
                    android:autoSizeMinTextSize="10dp"
                    android:autoSizeTextType="uniform"
                    android:background="#deb887"
                    android:textAlignment="center"
                    android:textColor="#964b00"
                    tools:text="이름" />

                <TextView
                    android:id="@+id/myInfoGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="40dp"
                    android:autoSizeMinTextSize="10dp"
                    android:autoSizeTextType="uniform"
                    android:background="#deb887"
                    android:textAlignment="center"
                    android:textColor="#964b00"
                    tools:text="성별" />

                <TextView
                    android:id="@+id/myInfoInterest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="40dp"
                    android:autoSizeMinTextSize="10dp"
                    android:autoSizeTextType="uniform"
                    android:background="#deb887"
                    android:textAlignment="center"
                    android:textColor="#964b00"
                    tools:text="관심목표" />

            </LinearLayout>
        </LinearLayout>
        <fragment
            android:id="@+id/myInfoListFragment"
            android:name="com.example.capstone4_1.fragment.StatisticsFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5" />
    </LinearLayout>
</FrameLayout>