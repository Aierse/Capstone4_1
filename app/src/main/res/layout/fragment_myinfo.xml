<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".fragment.MyinfoFragment"
    android:background="#964b00">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 현재 페이지 이름             weight 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/MyInfo"
                android:textAlignment="center"
                android:textSize="30sp"
                android:background="#deb887"
                android:textColor="#964b00"
                android:layout_margin="3dp" />
        </LinearLayout>
        <!--  내 정보                    weight 3 -->
        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:background="#964b00">

                <ImageView
                    android:id="@+id/myCharacter"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:background="#deb887"
                    android:layout_margin="3dp"
                    android:contentDescription="@string/MyInfo"
                    android:src="@drawable/sprite_char1" />

                <RatingBar
                    android:id="@+id/hp_Bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="0"
                    style="@style/slothBar"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:background="#964b00"
                android:weightSum="3">

                <TextView
                    android:id="@+id/myInfoName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="40dp"
                    android:autoSizeMinTextSize="10dp"
                    android:autoSizeTextType="uniform"
                    android:background="#deb887"
                    android:textColor="#964b00"
                    android:textAlignment="center"
                    android:layout_margin="3dp"
                    tools:text="이름" />

                <TextView
                    android:id="@+id/myInfoGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="40dp"
                    android:autoSizeMinTextSize="10dp"
                    android:autoSizeTextType="uniform"
                    android:background="#deb887"
                    android:textColor="#964b00"
                    android:textAlignment="center"
                    android:layout_margin="3dp"
                    tools:text="성별" />

                <TextView
                    android:id="@+id/myInfoInterest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="40dp"
                    android:autoSizeMinTextSize="10dp"
                    android:autoSizeTextType="uniform"
                    android:background="#deb887"
                    android:textColor="#964b00"
                    android:textAlignment="center"
                    android:layout_margin="3dp"
                    tools:text="관심목표" />
            </LinearLayout>

        </LinearLayout>
        <!--    통계                      weight 5 -->
            <fragment
                android:id="@+id/myInfoListFragment"
                android:name="com.example.capstone4_1.fragment.StatisticsFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"/>



    </LinearLayout>

</FrameLayout>